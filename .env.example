# Database Configuration
# For local PostgreSQL: postgresql://username:password@localhost:5432/database_name
# For AWS RDS: postgresql://username:password@rds-endpoint:5432/database_name
# IMPORTANT: Change the password below before deployment!
DATABASE_URL="postgresql://ironclad_user:CHANGE_THIS_PASSWORD@localhost:5432/ironclad"

# JWT Configuration
# CRITICAL: Generate a strong secret using: openssl rand -base64 32
# This secret is used to sign JWT tokens - must be kept secure and changed from default!
JWT_SECRET="GENERATE_STRONG_SECRET_HERE_DO_NOT_USE_DEFAULT"
JWT_EXPIRATION="24h"

# Node Environment
# Options: development, production, test
NODE_ENV="production"

# Server Port
PORT=3000

# AWS S3 Configuration (for video uploads)
# Get these from AWS IAM console
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET="your-s3-bucket-name"

# CORS Configuration
# For single domain: https://yourdomain.com
# For multiple domains: https://domain1.com,https://domain2.com
# For development: *
CORS_ORIGIN="*"
